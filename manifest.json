{
    "manifest_version": 2,
  
    "name": "__MSG_title__",
    "description": "Used only in baimaohui intranet.",
    "version": "0.1",

    "icons": {
        "128": "images/icon.png"
    },
    "default_locale": "zh_CN",
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html",
        "default_title": "__MSG_title__"
    },

    "background": { 
        "scripts": [ 
            "js/URI.min.js",
            "js/background.js"
        ],
        "persistent": true
    },

    "permissions": [
        "<all_urls>",
        "proxy",
        "debugger",
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "storage"
    ]
  }
  